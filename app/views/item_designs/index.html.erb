<%- model_class = ItemDesign -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:item_cd) %></th>
      <th><%= model_class.human_attribute_name(:yarn) %></th>
      <th><%= model_class.human_attribute_name(:strech_rate) %></th>
      <th><%= model_class.human_attribute_name(:ori_mr) %></th>
      <th><%= model_class.human_attribute_name(:plan_width) %></th>
      <th><%= model_class.human_attribute_name(:plan_repeart) %></th>
      <th><%= model_class.human_attribute_name(:special_width) %></th>
      <th><%= model_class.human_attribute_name(:special_repeart) %></th>
      <th><%= model_class.human_attribute_name(:process_type) %></th>
      <th><%= model_class.human_attribute_name(:remarks) %></th>
      <th><%= model_class.human_attribute_name(:lace_design_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @item_designs.each do |item_design| %>
      <tr>
        <td><%= link_to item_design.id, item_design_path(item_design) %></td>
        <td><%= item_design.item_cd %></td>
        <td><%= item_design.yarn %></td>
        <td><%= item_design.strech_rate %></td>
        <td><%= item_design.ori_mr %></td>
        <td><%= item_design.plan_width %></td>
        <td><%= item_design.plan_repeart %></td>
        <td><%= item_design.special_width %></td>
        <td><%= item_design.special_repeart %></td>
        <td><%= item_design.process_type %></td>
        <td><%= item_design.remarks %></td>
        <td><%= item_design.lace_design_id %></td>
        <td><%=l item_design.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_item_design_path(item_design), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      item_design_path(item_design),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_item_design_path,
            :class => 'btn btn-primary' %>
