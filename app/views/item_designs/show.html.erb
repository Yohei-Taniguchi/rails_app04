<%- model_class = ItemDesign -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:item_cd) %>:</strong></dt>
  <dd><%= @item_design.item_cd %></dd>
  <dt><strong><%= model_class.human_attribute_name(:yarn) %>:</strong></dt>
  <dd><%= @item_design.yarn %></dd>
  <dt><strong><%= model_class.human_attribute_name(:strech_rate) %>:</strong></dt>
  <dd><%= @item_design.strech_rate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ori_mr) %>:</strong></dt>
  <dd><%= @item_design.ori_mr %></dd>
  <dt><strong><%= model_class.human_attribute_name(:plan_width) %>:</strong></dt>
  <dd><%= @item_design.plan_width %></dd>
  <dt><strong><%= model_class.human_attribute_name(:plan_repeart) %>:</strong></dt>
  <dd><%= @item_design.plan_repeart %></dd>
  <dt><strong><%= model_class.human_attribute_name(:special_width) %>:</strong></dt>
  <dd><%= @item_design.special_width %></dd>
  <dt><strong><%= model_class.human_attribute_name(:special_repeart) %>:</strong></dt>
  <dd><%= @item_design.special_repeart %></dd>
  <dt><strong><%= model_class.human_attribute_name(:process_type) %>:</strong></dt>
  <dd><%= @item_design.process_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:remarks) %>:</strong></dt>
  <dd><%= @item_design.remarks %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lace_design_id) %>:</strong></dt>
  <dd><%= @item_design.lace_design_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              item_designs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_item_design_path(@item_design), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              item_design_path(@item_design),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
