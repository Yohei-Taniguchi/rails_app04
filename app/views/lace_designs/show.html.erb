<%- model_class = LaceDesign -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:lace_design_no) %>:</strong></dt>
  <dd><%= @lace_design.lace_design_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:use) %>:</strong></dt>
  <dd><%= @lace_design.use %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lace_type) %>:</strong></dt>
  <dd><%= @lace_design.lace_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rs) %>:</strong></dt>
  <dd><%= @lace_design.rs %></dd>
  <dt><strong><%= model_class.human_attribute_name(:carry) %>:</strong></dt>
  <dd><%= @lace_design.carry %></dd>
  <dt><strong><%= model_class.human_attribute_name(:point) %>:</strong></dt>
  <dd><%= @lace_design.point %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nominal_width) %>:</strong></dt>
  <dd><%= @lace_design.nominal_width %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fin_mr) %>:</strong></dt>
  <dd><%= @lace_design.fin_mr %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mc_type) %>:</strong></dt>
  <dd><%= @lace_design.mc_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:honsu) %>:</strong></dt>
  <dd><%= @lace_design.honsu %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sherring) %>:</strong></dt>
  <dd><%= @lace_design.sherring %></dd>
  <dt><strong><%= model_class.human_attribute_name(:halfcut) %>:</strong></dt>
  <dd><%= @lace_design.halfcut %></dd>
  <dt><strong><%= model_class.human_attribute_name(:skecher) %>:</strong></dt>
  <dd><%= @lace_design.skecher %></dd>
  <dt><strong><%= model_class.human_attribute_name(:design_code) %>:</strong></dt>
  <dd><%= @lace_design.design_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:design_no) %>:</strong></dt>
  <dd><%= @lace_design.design_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:drafman) %>:</strong></dt>
  <dd><%= @lace_design.drafman %></dd>
  <dt><strong><%= model_class.human_attribute_name(:remarks) %>:</strong></dt>
  <dd><%= @lace_design.remarks %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              lace_designs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lace_design_path(@lace_design), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lace_design_path(@lace_design),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
