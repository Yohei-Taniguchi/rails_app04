<%- model_class = LaceDesign -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="col-lg-3">
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_lace_design_path,
              :class => 'btn btn-primary' %>
</div>

<table class="col-lg-12 table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:lace_design_no) %></th>
      <th><%= model_class.human_attribute_name(:skecher) %></th>
      <th><%= model_class.human_attribute_name(:design_code) %></th>
      <th><%= model_class.human_attribute_name(:design_no) %></th>
      <th><%= model_class.human_attribute_name(:use) %></th>
      <th><%= model_class.human_attribute_name(:lace_type) %></th>
      <th><%= model_class.human_attribute_name(:rs) %></th>
      <th><%= model_class.human_attribute_name(:carry) %></th>
      <th><%= model_class.human_attribute_name(:point) %></th>
      <th><%= model_class.human_attribute_name(:nominal_width) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @lace_designs.each do |lace_design| %>
      <tr>
        <td><%= link_to lace_design.id, lace_design_path(lace_design) %></td>
        <td><%= lace_design.lace_design_no %></td>
        <td><%= lace_design.use %></td>
        <td><%= lace_design.lace_type %></td>
        <td><%= lace_design.rs %></td>
        <td><%= lace_design.carry %></td>
        <td><%= lace_design.point %></td>
        <td><%= lace_design.nominal_width %></td>
        <td><%= lace_design.fin_mr %></td>
        <td><%= lace_design.mc_type %></td>
        <td><%= lace_design.honsu %></td>
        <td><%= lace_design.sherring %></td>
        <td><%= lace_design.halfcut %></td>
        <td><%= lace_design.skecher %></td>
        <td><%= lace_design.design_code %></td>
        <td><%= lace_design.design_no %></td>
        <td><%= lace_design.drafman %></td>
        <td><%= lace_design.remarks %></td>
        <td><%=l lace_design.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_lace_design_path(lace_design), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      lace_design_path(lace_design),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

